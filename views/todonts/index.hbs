<h1>You have {{todonts.length}} To-Dont's</h1>

<ul>
	{{#each todonts}}
		<li>Description:<a href='todonts/{{@index}}'>{{description}}</a></li>
		<li>Urgent:{{urgent}}</li>
		<form method="POST" action="/todonts/{{@index}}?_method=DELETE">
			<button>DELETE THIS</button>
		</form>
		<br>
	{{/each}}
</ul>

<a href="/todonts/new">Create a new To Dont</a>